#!/usr/bin/env bash
name='gdk-pixbuf'
release='1'
version='2.42.10'
url='https://gitlab.gnome.org/GNOME/gdk-pixbuf'
description='gdk-pixbuf Image loading library for GTK+ '
email='bayramk@gmail.com'
maintainer='bk'
license=('GPLv3')
source=("https://download.gnome.org/sources/gdk-pixbuf/${version%.*}/gdk-pixbuf-$version.tar.xz")
depends=(libjpeg-turbo shared-mime-info gi-docgen libtiff)
makedepends=()
md5sums=('4a62f339cb1424693fba9bb7ffef8150')
group=(x11.libs)
uses=()
arch=('x86_64')

cd $name-$version

setup(){
    meson setup build --prefix=/usr \
        --libdir=/usr/lib64/ \
        -Dman=false \
        -D builtin_loaders=all \
        -D installed_tests=false \
        -D tiff=enabled \
        -D tests=false
}

build(){
    ninja -C build
}

package(){
    ninja -C build install
}

