#!/usr/bin/env bash
name='cairo'
release='2'
version='1.18.0'
url='https://gitlab.freedesktop.org/cairo/cairo.git/'
description='A vector graphics library with cross-device output support'
email='bayramk@gmail.com'
maintainer='bk'
license=('GPLv3')
source=("https://gitlab.freedesktop.org/cairo/cairo/-/archive/$version/cairo-$version.tar.gz")
depends=(pixman libpng glib libpcre2 fontconfig libX11)
makedepends=(gtk-doc meson)
md5sums=('c61aebf23b1928a709df76ccc9537173')
group=(x11.libs)
uses=()
arch=('x86_64')

cd $name-$version

setup(){
	meson setup build --prefix=/usr \
        --libdir=/usr/lib64/ \
        -D b_lto=true \
        -D gtk_doc=false \
        -D spectre=disabled \
        -D symbol-lookup=disabled \
        -D tests=disabled
}

build(){
    ninja -C build
}

package(){
    ninja -C build install
}

