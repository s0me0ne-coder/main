#!/usr/bin/env bash
name='libpsl'
release='1'
version='0.21.1'
url='https://github.com/rockdaboot/libpsl'
description='C library for the Public Suffix List'
email='parduscix@yandex.ru'
maintainer='sulincix'
license=('GPLv3')
source=("https://github.com/rockdaboot/libpsl/releases/download/$version/libpsl-$version.tar.gz")
depends=(libidn2)
makedepends=(python)
md5sums=('ad40b970dcb5117d559b62a1e0d8d827')
arch=('x86_64')
group=(net.libs)

cd $name-$version

fprepare() {
  rm -frv list
}

setup(){
    autoreconf -fiv
    ./configure \
        --prefix=/usr \
        --libdir=/usr/lib64 \
        --enable-{builtin,runtime}=libidn2 
}

build(){
    make $jobs
}

package(){
    make install $jobs
}

