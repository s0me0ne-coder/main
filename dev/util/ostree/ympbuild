#!/usr/bin/env bash
name='ostree'
release='3'
version='2023.8'
url='https://github.com/ostreedev/ostree'
description='Operating system and container binary deployment and upgrades'
email='aliriza.keskin@pardus.org.tr'
maintainer='aliriza'
license=('GPLv3')
source=("https://github.com/ostreedev/ostree/releases/download/v${version}/libostree-${version}.tar.xz")
depends=(fuse gpgme libarchive curl libsoup2 e2fsprogs libassuan)
makedepends=()
md5sums=('64e3ec6b6e323c4dd98dfdfb3b4aa112')
group=(dev.util)
uses=()
arch=('x86_64')

cd lib$name-$version

setup(){
    autoreconf -fvi
    ./configure --prefix=/usr \
        --libdir=/usr/lib64/ \
	      --sysconfdir=/etc \
		    --localstatedir=/var \
    		--disable-glibtest \
        --with-soup \
        --without-libsystemd \
        --with-curl
}

build(){
    make $jobs
}

package(){
    make install $jobs
    # move /usr/lib to /usr/lib64
    mv $DESTDIR/usr/lib/* $DESTDIR/usr/lib64
    rm -rf $DESTDIR/usr/lib/
    # remove garbage files
    rm -rvf $DESTDIR/etc/grub.d/
    rm -rvf $DESTDIR/lib/systemd
    rm -rvf $DESTDIR/usr/libexec/libostree/grub2-*

}

