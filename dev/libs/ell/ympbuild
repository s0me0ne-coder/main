#!/usr/bin/env bash
name='ell'
release='3'
version='0.58'
url='https://01.org/ell'
description='Embedded Linux library'
email='akarsu@protonmail.com'
maintainer='akarsu'
license=('GPLv2.1')
source=(https://mirrors.edge.kernel.org/pub/linux/libs/$name/$name-$version.tar.{xz,sign})
depends=()
makedepends=()
md5sums=('d6dc4b910101de38168c847fb1efefa2' 'f1c05b3e08ac542b23f02bc706b83508')
group=(dev.libs)
uses=()
arch=('x86_64')

cd $name-$version

setup(){
    ./configure --prefix=/usr \
        --libdir=/usr/lib64/
}

build(){
    make $jobs
}

package(){
    make install DESTDIR="$DESTDIR" $jobs
}

