#!/usr/bin/env bash
name='binutils'
release='1'
version='2.39'
url='https://ftp.gnu.org/gnu/binutils/'
description='A set of programs to assemble and manipulate binary and object files'
email=' aliriza.keskin@pardus.org.tr'
maintainer=' aliriza'
license=('GPLv3')
source=("https://ftp.gnu.org/gnu/binutils/binutils-$version.tar.xz")
depends=(zlib)
makedepends=( )
md5sums=('f7e986ae9ff06405cafb2e585ee36d27')
arch=('x86_64')
group=(sys.devel)
uses=(multilib)

unset CFLAGS
unset CXXFLAGS

export PATH=$PATH:$HOME

cd $name-$version

prepare(){
    echo "#!/bin/sh" > $HOME/makeinfo
    echo "printf 'makeinfo (GNU texinfo) 5.2\n'" >> $HOME/makeinfo
    chmod +x $HOME/makeinfo
}

setup(){
    mkdir build
    cd build
    set -x
    ../configure --prefix=/usr \
        --libdir=/usr/lib64 \
        $(use_opt x86_64 '--enable-targets=x86_64-pep' '') \
        $(use_opt multilib '--enable-multilib' '--disable-multilib') \
        --enable-deterministic-archives \
        --enable-gold \
        --enable-lto \
        --enable-threads \
        --enable-ld=default \
        --enable-plugins \
        --disable-werror \
        --disable-gdb \
        --disable-nls \
        --disable-readline \
        --disable-gprof \
        --with-mmap \
        --disable-nls \
        --enable-install-libiberty \
        --enable-shared \
        --with-pic \
        --with-system-zlib
}

build(){
    cd build
    make configure-host
    make tooldir=/usr
}

package(){
    cd build
    make tooldir=/usr install -j`nproc`
}

