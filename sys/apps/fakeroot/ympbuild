#!/usr/bin/env bash
name='fakeroot'
release='2'
version='1.32.1'
url='https://salsa.debian.org/clint/fakeroot/-/tags'
description='A fake root environment by means of LD_PRELOAD and SysV IPC (or TCP) trickery'
email='aliriza.keskin@pardus.org.tr'
maintainer='aliriza'
license=('GPLv3')
source=("https://ftp.debian.org/debian/pool/main/f/fakeroot/fakeroot_$version.orig.tar.gz")
depends=(sed util-linux bash)
makedepends=()
md5sums=('0e423c0362663c08837439bacf57d931')
uses=()
group=(sys.apps)
arch=('x86_64')

cd $name-$version

setup(){
    autoreconf -fvi
    ./configure --prefix=/usr \
        --libdir=/usr/lib64/ \
        --with-ipc=sysv
}

build(){
    make
    #cd doc
    #po4a -k 0 --rm-backups --variable 'srcdir=../doc/' po4a/po4a.cfg
}

package(){
    make install

}

