#!/usr/bin/env bash
name='udisks2'
release='1'
version='2.9.4'
url='https://github.com/storaged-project/udisks'
description='Disk Management Service, version 2'
email='aliriza.keskin@pardus.org.tr'
maintainer='aliriza'
license=('GPLv3')
source=("https://github.com/storaged-project/udisks/archive/refs/tags/udisks-$version.tar.gz")
depends=(libblockdev libatasmart libgudev polkit)
makedepends=()
md5sums=('b03e328a807e0183adba04e546a4f343')
group=(sys.fs)
uses=()
arch=('x86_64')

cd udisks-udisks-$version

setup(){
    autoreconf -fvi
    ./configure --prefix=/usr \
        --sysconfdir=/etc \
        --libdir=/usr/lib64/ \
        --with-systemdsystemunitdir=no \
        --enable-lvm2 \
        --enable-lvmcache \
        --enable-btrfs \
        --disable-zram
}

build(){
    make $jobs
}

package(){
    make install $jobs
}

