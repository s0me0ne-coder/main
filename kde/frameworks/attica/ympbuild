#!/usr/bin/env bash
name='attica'
release='2'
version='6.0.0'
url='https://community.kde.org/Frameworks'
description='Qt library that implements the Open Collaboration Services API'
email='akarsu@protonmail.com'
maintainer='akarsu'
license=('LGPL')
source=("https://download.kde.org/stable/frameworks/${version%.*}/attica-${version}.tar.xz")
depends=(qt6-base)
makedepends=(extra-cmake-modules doxygen)
md5sums=('47c7b3b14fdfd20526f921893e33a6df')
group=(kde.frameworks)
uses=()
arch=('x86_64')

cd $name-$version

setup () {
cmake -B build -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr 

}

build () {
    cmake --build build
}

package () {
    INSTALL_ROOT="$DESTDIR" cmake --install build
}

