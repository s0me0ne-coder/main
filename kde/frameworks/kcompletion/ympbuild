#!/usr/bin/env bash
name='kcompletion'
release='1'
version='5.110.0'
url='https://community.kde.org/Frameworks'
description='Text completion helpers and widgets'
email='akarsu@protonmail.com'
maintainer='akarsu'
license=('LGPL')
source=("https://download.kde.org/stable/frameworks/${version%.*}/kcompletion-${version}.tar.xz")
depends=(kconfig)
makedepends=(extra-cmake-modules graphviz qt5-tools doxygen)
md5sums=('91ef323fb60f104fd4068eae5862f6ed')
group=(kde.frameworks)
uses=()
arch=('x86_64')

cd $name-$version

setup () {
cmake -B build -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
}

build () {
	cmake --build build
}

package () {
    INSTALL_ROOT="$DESTDIR" cmake --install build
}


